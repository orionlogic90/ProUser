    // ==================== D'ALEMBERT RECOVERY SYSTEM - FIXED ====================
    const DallembertRecovery = {
        isActive: false,
        currentLevel: 0,
        lossStreak: 0,
        recoveryWins: 0,
        originalLoss: 0,
        
        levels: [
            { // Level 1: Loss 1-3
                min: 1, max: 3,
                chance: { min: 75, max: 85 },
                betMultiplier: 1.5,
                description: "Safe Recovery"
            },
            { // Level 2: Loss 4-6
                min: 4, max: 6,
                chance: { min: 65, max: 75 },
                betMultiplier: 1.8,
                description: "Medium Recovery"
            },
            { // Level 3: Loss 7-10
                min: 7, max: 10,
                chance: { min: 55, max: 65 },
                betMultiplier: 2.2,
                description: "Aggressive Recovery"
            }
        ],
        
        getCurrentLevel() {
            for (const level of this.levels) {
                if (this.lossStreak >= level.min && this.lossStreak <= level.max) {
                    return level;
                }
            }
            return this.levels[this.levels.length - 1];
        },
        
        startRecovery(originalLoss) {
            this.isActive = true;
            this.currentLevel = 1;
            this.lossStreak = 0;
            this.recoveryWins = 0;
            this.originalLoss = originalLoss;
            
            console.log("üîÑ D'Alembert Recovery Started");
            updateStatus("üîÑ D'ALEMBERT STARTED", "#ffa500");
            updateLogs(0, 0, "D'ALEMBERT", 0, "D'Alembert recovery started");
            
            return true;
        },
        
        calculateNextBet(baseBet) {
            const level = this.getCurrentLevel();
            const bet = baseBet * level.betMultiplier * Math.pow(1.15, this.lossStreak);
            
            // Ensure minimum bet
            const minBet = getVal("p-minbet");
            return Math.max(bet, minBet);
        },
        
        calculateNextChance() {
            const level = this.getCurrentLevel();
            return Math.random() * (level.chance.max - level.chance.min) + level.chance.min;
        },
        
        handleWin() {
            this.recoveryWins++;
            this.lossStreak = Math.max(0, this.lossStreak - 2);
            this.currentLevel = Math.max(1, Math.floor((this.lossStreak - 1) / 3) + 1);
            
            console.log(`‚úÖ D'Alembert Win! Level: ${this.currentLevel}, Wins: ${this.recoveryWins}`);
            
            if (this.recoveryWins >= 3) {
                this.completeRecovery(true);
                return true;
            }
            return false;
        },
        
        handleLoss() {
            this.lossStreak++;
            this.currentLevel = Math.floor((this.lossStreak - 1) / 3) + 1;
            
            console.log(`‚ùå D'Alembert Loss! Streak: ${this.lossStreak}, Level: ${this.currentLevel}`);
            
            // Jika loss streak terlalu tinggi, stop recovery
            if (this.lossStreak >= 12) {
                this.completeRecovery(false);
                return true;
            }
            return false;
        },
        
        completeRecovery(success) {
            this.isActive = false;
            this.currentLevel = 0;
            this.lossStreak = 0;
            this.recoveryWins = 0;
            
            if (success) {
                updateStatus("‚úÖ D'ALEMBERT COMPLETE", "#4CAF50");
                updateLogs(0, 0, "D'ALEMBERT", 0, "D'Alembert recovery completed successfully");
            } else {
                updateStatus("‚ùå D'ALEMBERT FAILED", "#ff6b6b");
                updateLogs(0, 0, "D'ALEMBERT", 0, "D'Alembert recovery failed");
            }
            
            updateDallembertUI();
        },
        
        getProgress() {
            return Math.min(100, (this.recoveryWins / 3) * 100);
        }
    };


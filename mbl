        // Inject global function for collapsible sections
        window.toggleCollapse = function(sectionId) {
            const content = document.getElementById(sectionId + '-content');
            const arrow = document.getElementById(sectionId + '-arrow');
            
            if (content && arrow) {
                if (content.classList.contains('expanded')) {
                    content.classList.remove('expanded');
                    arrow.textContent = 'â–¼';
                } else {
                    content.classList.add('expanded');
                    arrow.textContent = 'â–²';
                }
            }
        };
        
        // Initialize collapsible sections
        setTimeout(() => {
            document.querySelectorAll('.collapsible-content').forEach(content => {
                if (!content.id.includes('settings-content')) {
                    content.classList.add('expanded');
                }
            });
            document.querySelectorAll('[id$="-arrow"]').forEach(arrow => {
                if (arrow && !arrow.id.includes('chance-arrow')) {
                    arrow.textContent = 'â–²';
                }
            });
        }, 100);
        
        // Render chance levels
        function renderChanceLevels() {
            const container = document.getElementById("chance-levels-grid");
            if (!container) return;
            
            container.innerHTML = '';
            
            bot.labouchere.chanceLevels.forEach((level, index) => {
                const levelCard = document.createElement("div");
                levelCard.className = `chance-level-card ${bot.labouchere.currentLs === level.ls ? 'active' : ''}`;
                levelCard.innerHTML = `
                    <div class="chance-level-label">LS${level.ls}</div>
                    <div class="chance-level-range">${level.chanceMin}%-${level.chanceMax}%</div>
                `;
                
                levelCard.addEventListener('click', () => {
                    const min = prompt(`Enter minimum chance for LS${level.ls}:`, level.chanceMin);
                    const max = prompt(`Enter maximum chance for LS${level.ls}:`, level.chanceMax);
                    
                    if (min !== null && max !== null) {
                        const minVal = parseFloat(min) || level.chanceMin;
                        const maxVal = parseFloat(max) || level.chanceMax;
                        
                        bot.labouchere.chanceLevels[index].chanceMin = minVal;
                        bot.labouchere.chanceLevels[index].chanceMax = maxVal;
                        
                        if (bot.labouchere.currentLs === level.ls) {
                            bot.currentChance = getLabouchereChance();
                        }
                        
                        renderChanceLevels();
                        updateLabouchereUI();
                        updateLogs(0, 0, 0, 
                            `LABOUCHERE: Level LS${level.ls} updated to ${minVal}%-${maxVal}%`, 
                            true
                        );
                    }
                });
                
                container.appendChild(levelCard);
            });
        }
        
        // Event Listeners
        const minimizeBtn = document.querySelector('.control-btn.minimize');
        if (minimizeBtn) {
            minimizeBtn.addEventListener('click', () => {
                if (confirm('Minimize bot? It will continue running in background.')) {
                    document.getElementById('orion-wrap').style.display = 'none';
                }
            });
        }
        
        const closeBtn = document.querySelector('.control-btn.close');
        if (closeBtn) {
            closeBtn.addEventListener('click', () => {
                if (confirm('Close Orion Bot?')) {
                    bot.isRunning = false;
                    document.getElementById('orion-wrap').remove();
                }
            });
        }
        
        document.querySelectorAll('.tab').forEach(tab => {
            tab.addEventListener('click', () => {
                document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
                document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
                tab.classList.add('active');
                const tabId = tab.dataset.tab;
                const content = document.getElementById(`tab-${tabId}`);
                if (content) content.classList.add('active');
            });
        });
        
        // Basebet toggle - FIXED
        document.querySelectorAll('.basebet-toggle-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                document.querySelectorAll('.basebet-toggle-btn').forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                
                const mode = btn.dataset.mode;
                bot.wagerStats.basebetMode = mode;
                
                const input = document.getElementById('w-basebet-input');
                const label = document.getElementById('basebet-label');
                
                if (input && label) {
                    if (mode === 'percentage') {
                        input.value = bot.wagerStats.basebetPercentage;
                        input.step = '0.1';
                        input.min = '0.1';
                        input.max = '10';
                        input.placeholder = '1.0';
                        label.textContent = 'Percentage:';
                    } else {
                        input.value = bot.wagerStats.basebetFixed.toFixed(8);
                        input.step = '0.00000001';
                        input.min = '0.00000001';
                        input.max = '';
                        input.placeholder = '0.00000001';
                        label.textContent = 'Amount:';
                    }
                    
                    if (bot.isRunning && bot.mode === 'wager') {
                        initWagerMode();
                    }
                }
            });
        });
        
        // Basebet input - FIXED
        const basebetInput = document.getElementById('w-basebet-input');
        if (basebetInput) {
            basebetInput.addEventListener('change', (e) => {
                const value = parseFloat(e.target.value) || 0;
                if (bot.wagerStats.basebetMode === 'percentage') {
                    bot.wagerStats.basebetPercentage = value;
                    if (value < 0.1) {
                        bot.wagerStats.basebetPercentage = 0.1;
                        e.target.value = 0.1;
                    }
                    if (value > 10) {
                        bot.wagerStats.basebetPercentage = 10;
                        e.target.value = 10;
                    }
                } else {
                    bot.wagerStats.basebetFixed = value;
                    if (value < 0.00000001) {
                        bot.wagerStats.basebetFixed = 0.00000001;
                        e.target.value = 0.00000001;
                    }
                    e.target.value = bot.wagerStats.basebetFixed.toFixed(8);
                }
                
                if (bot.isRunning && bot.mode === 'wager') {
                    initWagerMode();
                }
            });
        }
        
        // Orion method selector
        document.querySelectorAll('input[name="orion-method"]').forEach(radio => {
            radio.addEventListener('change', (e) => {
                bot.orionSettings.method = e.target.value;
                const martingaleInput = document.getElementById('martingale-multiplier');
                
                if (martingaleInput) {
                    if (e.target.value === 'martingale') {
                        martingaleInput.style.display = 'block';
                    } else {
                        martingaleInput.style.display = 'none';
                    }
                    
                    updateLogs(0, 0, 0, `ORION: Method changed to ${e.target.value.toUpperCase()}`, true);
                }
            });
        });
        
        // Martingale multiplier
        const martingaleMult = document.getElementById("p-martingale-mult");
        if (martingaleMult) {
            martingaleMult.addEventListener('change', (e) => {
                const val = parseFloat(e.target.value) || 2.0;
                bot.orionSettings.martingaleMultiplier = val;
                if (val < 1.1) bot.orionSettings.martingaleMultiplier = 1.1;
                if (val > 10) bot.orionSettings.martingaleMultiplier = 10;
                e.target.value = bot.orionSettings.martingaleMultiplier;
            });
        }
        
        // Wager recovery threshold
        const recoveryThreshold = document.getElementById("w-recovery-threshold");
        if (recoveryThreshold) {
            recoveryThreshold.addEventListener('change', (e) => {
                const val = parseFloat(e.target.value) || 0.1;
                bot.wagerStats.recoveryThreshold = val / 100;
                if (val < 0.01) {
                    bot.wagerStats.recoveryThreshold = 0.0001;
                    e.target.value = 0.01;
                }
                if (val > 10) {
                    bot.wagerStats.recoveryThreshold = 0.1;
                    e.target.value = 10;
                }
            });
        }
        
        // Labouchere settings
        const lChance = document.getElementById("l-chance");
        if (lChance) {
            lChance.addEventListener('change', (e) => {
                const val = parseFloat(e.target.value) || 49.5;
                bot.labouchere.chance = val;
                bot.labouchere.chanceLevels[0].chanceMin = val;
                bot.labouchere.chanceLevels[0].chanceMax = val;
                
                if (bot.isRunning && bot.mode === 'labouchere') {
                    bot.currentChance = getLabouchereChance();
                }
                renderChanceLevels();
                updateLabouchereUI();
            });
        }
        
        const lMaxbet = document.getElementById("l-maxbet");
        if (lMaxbet) {
            lMaxbet.addEventListener('change', (e) => {
                const val = parseFloat(e.target.value) || 0.01;
                bot.labouchere.maxBet = val;
                updateLabouchereUI();
            });
        }
        
        const lResetOnMaxbet = document.getElementById("l-reset-on-maxbet");
        if (lResetOnMaxbet) {
            lResetOnMaxbet.addEventListener('change', (e) => {
                bot.labouchere.resetOnMaxBet = e.target.checked;
            });
        }
        
        const lSequence = document.getElementById("l-sequence");
        if (lSequence) {
            lSequence.addEventListener('change', (e) => {
                const seq = e.target.value || "0.001,0.002,0.003,0.004";
                if (bot.isRunning && bot.mode === 'labouchere') {
                    bot.labouchere.sequence = seq.split(',').map(x => parseFloat(x.trim()) || 0.001);
                    bot.labouchere.currentSequence = [...bot.labouchere.sequence];
                    updateLogs(0, 0, 0, `LABOUCHERE: Sequence updated to ${seq}`, true);
                    updateLabouchereUI();
                }
            });
        }
        
        // Mode toggles
        const modeWager = document.getElementById("mode-wager");
        if (modeWager) {
            modeWager.checked = bot.enabledModes.wager;
            modeWager.addEventListener('change', (e) => {
                bot.enabledModes.wager = e.target.checked;
                updateLogs(0, 0, 0, `Wager ${e.target.checked ? 'ENABLED' : 'DISABLED'}`, true);
            });
        }
        
        const modeLabouchere = document.getElementById("mode-labouchere");
        if (modeLabouchere) {
            modeLabouchere.checked = bot.enabledModes.labouchere;
            modeLabouchere.addEventListener('change', (e) => {
                bot.enabledModes.labouchere = e.target.checked;
                updateLogs(0, 0, 0, `Labouchere ${e.target.checked ? 'ENABLED' : 'DISABLED'}`, true);
            });
        }
        
        const modeOrion = document.getElementById("mode-orion");
        if (modeOrion) {
            modeOrion.checked = bot.enabledModes.orion;
            modeOrion.addEventListener('change', (e) => {
                bot.enabledModes.orion = e.target.checked;
                updateLogs(0, 0, 0, `Orion ${e.target.checked ? 'ENABLED' : 'DISABLED'}`, true);
            });
        }
        
        // Turbo mode
        const pTurboToggle = document.getElementById("p-turbo-toggle");
        if (pTurboToggle) {
            pTurboToggle.onchange = (e) => {
                bot.turboMode = e.target.checked;
                updateStatsInterval();
                updateLogs(0, 0, 0, `Turbo Mode ${bot.turboMode ? 'ENABLED ðŸš€' : 'DISABLED'}`, true);
                
                if (bot.turboMode) {
                    updateLogs(0, 0, 0, "âš ï¸ WARNING: Turbo mode may increase risk of API rate limiting!", true);
                }
            };
        }
        
        // Turbo settings
        const turboDelay = document.getElementById("turbo-delay");
        if (turboDelay) {
            turboDelay.onchange = (e) => {
                bot.turboSettings.betDelay = parseInt(e.target.value) || 1;
                if (bot.turboSettings.betDelay < 0) bot.turboSettings.betDelay = 0;
                if (bot.turboSettings.betDelay > 1000) bot.turboSettings.betDelay = 1000;
            };
        }
        
        const turboUIUpdate = document.getElementById("turbo-ui-update");
        if (turboUIUpdate) {
            turboUIUpdate.onchange = (e) => {
                bot.turboSettings.updateInterval = parseInt(e.target.value) || 5000;
                updateStatsInterval();
            };
        }
        
        // Currency - FIXED: Tidak reset ke DOGE
        const pCurrency = document.getElementById("p-currency");
        if (pCurrency) {
            pCurrency.onchange = (e) => { 
                bot.selectedCurrency = e.target.value; 
                const stCurrency = document.getElementById("st-currency");
                if (stCurrency) stCurrency.textContent = e.target.value.toUpperCase();
                updateLogs(0, 0, 0, `Currency changed to ${e.target.value.toUpperCase()}`, true);
            };
        }
        
        // Steps
        const pSteps = document.getElementById("p-steps");
        if (pSteps) {
            pSteps.addEventListener('change', (e) => {
                bot.rotationState.stepLimit = parseInt(e.target.value) || 10000;
            });
        }
        
        // XStopWin inputs
        for (let i = 1; i <= 4; i++) {
            const input = document.getElementById(`w-xstopwin-${i}`);
            if (input) {
                input.addEventListener('change', (e) => {
                    const val = parseFloat(e.target.value) || 0;
                    bot.wagerStats.xstopwin[i-1] = val;
                });
            }
        }
        
        // Chance inputs
        const wChanceNormal = document.getElementById("w-chance-normal");
        if (wChanceNormal) {
            wChanceNormal.addEventListener('change', (e) => {
                const val = parseFloat(e.target.value) || 97;
                bot.wagerStats.chanceNormal = val;
            });
        }
        
        const wChanceRecovery = document.getElementById("w-chance-recovery");
        if (wChanceRecovery) {
            wChanceRecovery.addEventListener('change', (e) => {
                const val = parseFloat(e.target.value) || 25;
                bot.wagerStats.chanceRecovery = val;
            });
        }
        
        const wChanceMax = document.getElementById("w-chance-max");
        if (wChanceMax) {
            wChanceMax.addEventListener('change', (e) => {
                const val = parseFloat(e.target.value) || 99;
                bot.wagerStats.chanceMax = val;
            });
        }
        
        // Start button
        const pStart = document.getElementById("p-start");
        if (pStart) {
            pStart.onclick = async () => {
                if (bot.isRunning) return;
                
                const currencySelect = document.getElementById("p-currency");
                if (currencySelect) {
                    // FIX: Simpan currency yang dipilih, tidak reset
                    bot.selectedCurrency = currencySelect.value;
                }
                
                if (!bot.isDemo) await API.syncOnce();
                bot.isRunning = true;
                bot.isPaused = false;
                
                const startBtn = document.getElementById("p-start");
                const pauseBtn = document.getElementById("p-pause");
                const stopBtn = document.getElementById("p-stop");
                const turboBtn = document.getElementById("p-turbo");
                
                if (startBtn) {
                    startBtn.innerHTML = 'âš¡ RUNNING';
                    startBtn.classList.remove('btn-primary');
                    startBtn.classList.add('btn-success');
                }
                if (pauseBtn) {
                    pauseBtn.innerHTML = 'â¸ PAUSE';
                    pauseBtn.disabled = false;
                }
                if (stopBtn) {
                    stopBtn.disabled = false;
                }
                if (turboBtn) {
                    turboBtn.disabled = false;
                }
                
                bot.stats = { 
                    profit: 0, wagered: 0, startBal: 0, currentBal: 0, 
                    bets: 0, wins: 0, loss: 0, startTime: Date.now(), 
                    maxDD: 0, maxDDPerc: 0 
                };
                
                if (!bot.isDemo) {
                    bot.stats.startBal = await API.getBalance(bot.selectedCurrency);
                } else {
                    bot.stats.startBal = 100.0;
                }
                
                bot.stats.currentBal = bot.stats.startBal;
                bot.rotationState.initialBalance = bot.stats.startBal;
                bot.rotationState.inRecovery = false;
                
                // WORKFLOW FIX: Tentukan mode start berdasarkan enabled modes
                const startingMode = determineStartingMode();
                bot.mode = startingMode;
                
                const stepsInput = document.getElementById("p-steps");
                if (stepsInput) {
                    bot.rotationState.stepLimit = parseInt(stepsInput.value) || 10000;
                }
                
                const targetPct = document.getElementById("p-target-pct");
                const stopPct = document.getElementById("p-stop-pct");
                if (targetPct && stopPct) {
                    bot.targetAbs = bot.stats.startBal * (parseFloat(targetPct.value) / 100);
                    bot.stopLossAbs = bot.stats.startBal * (parseFloat(stopPct.value) / 100);
                } else {
                    bot.targetAbs = bot.stats.startBal * 0.1;
                    bot.stopLossAbs = bot.stats.startBal * 0.5;
                }
                bot.perStep = bot.targetAbs / bot.rotationState.stepLimit;
                
                const wagerThreshold = document.getElementById("s-wager-threshold");
                const severeThreshold = document.getElementById("s-severe-threshold");
                if (wagerThreshold && severeThreshold) {
                    bot.rotationState.wagerLossThreshold = parseFloat(wagerThreshold.value) / 100 || 0.001;
                    bot.rotationState.severeLossThreshold = parseFloat(severeThreshold.value) / 100 || 0.01;
                }
                
                // WORKFLOW FIX: Inisialisasi mode yang sesuai
                if (bot.mode === 'wager') {
                    initWagerMode();
                    updateLogs(0, 0, 0, 
                        `STARTING: Wager Mode (${bot.enabledModes.wager ? 'Enabled' : 'Disabled'})`, 
                        true
                    );
                } else if (bot.mode === 'labouchere') {
                    initLabouchere();
                    updateLogs(0, 0, 0, 
                        `STARTING: Labouchere Mode (${bot.enabledModes.labouchere ? 'Enabled' : 'Disabled'})`, 
                        true
                    );
                } else if (bot.mode === 'orion') {
                    setNewBaseChance();
                    updateLogs(0, 0, 0, 
                        `STARTING: Orion Mode (${bot.enabledModes.orion ? 'Enabled' : 'Disabled'})`, 
                        true
                    );
                }
                
                updateStatsInterval();
                renderChanceLevels();
                updateLogs(0, 0, 0, 
                    `Started in ${bot.mode.toUpperCase()} mode. Initial Balance: ${bot.stats.startBal.toFixed(8)} (${bot.selectedCurrency.toUpperCase()})`, 
                    true
                );
                updateLogs(0, 0, 0, 
                    `WORKFLOW: ${bot.enabledModes.wager ? 'Wager â†’ ' : ''}${bot.enabledModes.labouchere ? 'Labouchere â†’ ' : ''}${bot.enabledModes.orion ? 'Orion' : ''}`, 
                    true
                );
                updateLogs(0, 0, 0, 
                    `Rotation Thresholds: Wager ${(bot.rotationState.wagerLossThreshold*100).toFixed(2)}%, Severe ${(bot.rotationState.severeLossThreshold*100).toFixed(2)}%`, 
                    true
                );
                
                runLoop();
            };
        }
        
        // Pause button
        const pPause = document.getElementById("p-pause");
        if (pPause) {
            pPause.onclick = () => { 
                if (!bot.isRunning) return;
                
                bot.isPaused = !bot.isPaused;
                
                if (bot.isPaused) {
                    pPause.innerHTML = 'â–¶ RESUME';
                    pPause.classList.remove('btn-pause');
                    pPause.classList.add('btn-success');
                    updateLogs(0, 0, 0, "Bot PAUSED", true);
                } else {
                    pPause.innerHTML = 'â¸ PAUSE';
                    pPause.classList.remove('btn-success');
                    pPause.classList.add('btn-pause');
                    updateLogs(0, 0, 0, "Bot RESUMED", true);
                    runLoop();
                }
            };
        }
        
        // Stop button
        const pStop = document.getElementById("p-stop");
        if (pStop) {
            pStop.onclick = () => { 
                bot.isRunning = false; 
                bot.isPaused = false;
                
                const startBtn = document.getElementById("p-start");
                const pauseBtn = document.getElementById("p-pause");
                
                if (startBtn) {
                    startBtn.innerHTML = 'â–¶ START';
                    startBtn.classList.remove('btn-success');
                    startBtn.classList.add('btn-primary');
                }
                
                if (pauseBtn) {
                    pauseBtn.innerHTML = 'â¸ PAUSE';
                    pauseBtn.classList.remove('btn-success');
                    pauseBtn.classList.add('btn-pause');
                    pauseBtn.disabled = false;
                }
                
                if (statsInterval) clearInterval(statsInterval);
                updateLogs(0, 0, 0, "Bot STOPPED", true);
            };
        }
        
        // Turbo button
        const pTurbo = document.getElementById("p-turbo");
        if (pTurbo) {
            pTurbo.onclick = () => {
                bot.turboMode = !bot.turboMode;
                const turboToggle = document.getElementById("p-turbo-toggle");
                if (turboToggle) turboToggle.checked = bot.turboMode;
                
                updateStatsInterval();
                updateLogs(0, 0, 0, `Turbo Mode ${bot.turboMode ? 'ENABLED ðŸš€' : 'DISABLED'}`, true);
                
                if (bot.turboMode) {
                    updateLogs(0, 0, 0, "âš ï¸ WARNING: Turbo mode may increase risk of API rate limiting!", true);
                }
            };
        }
        
        // Demo mode toggle
        const pDemoToggle = document.getElementById("p-demo-toggle");
        if (pDemoToggle) {
            pDemoToggle.onchange = (e) => {
                bot.isDemo = e.target.checked;
                updateLogs(0, 0, 0, `Demo Mode ${bot.isDemo ? 'ON' : 'OFF'}`, true);
            };
        }
        
        // Initialize
        renderChanceLevels();
        updateStatsInterval();
        
        // Auto sync
        setTimeout(() => {
            API.syncOnce();
        }, 500);
    }

    // Initialize UI
    createUI();
})();

(function () {
    // Check if already injected
    if (window.ORION_BOT_INJECTED) {
        console.log('Orion Bot already running');
        return;
    }
    window.ORION_BOT_INJECTED = true;

    const CONFIG = {
        get apiUrl() { 
            return window.location.origin + '/_api';
        },
        tgToken: '8391763291:AAEA05v6FG70eM1WGrgU7mrPgckfjQaxkno',
        tgChatId: '-1003744641395', 
        version: "ORION v8.0 + MINES",
    };

    const bot = {
        isRunning: false, 
        isDemo: false, 
        token: null, 
        stakeUser: "Loading...",
        stats: { 
            profit: 0, 
            wagered: 0, 
            startBal: 0, 
            currentBal: 0, 
            bets: 0, 
            wins: 0, 
            loss: 0, 
            startTime: null, 
            maxDD: 0, 
            maxDDPerc: 0 
        },
        selectedCurrency: "doge", 
        tg: 0, 
        perStep: 0, 
        baseChance: 0, 
        currentChance: 0,
        singleChanceBets: 0, 
        singleChanceLimit: 0, 
        targetAbs: 0, 
        stopLossAbs: 0,
        mode: "mines",
        enabledModes: {
            mines: true,
            orion: true,
            wager: true,
            labouchere: true
        },
        minesStats: {
            betsBeforeRotation: 3,
            currentMineBets: 0,
            minesCount: 3,
            gridSize: 5,
            betAmount: 0.00000001,
            autoCashout: 1.5,
            targetProfit: 0.00000010,
            recoveryMode: false,
            currentGameId: null,
            revealedTiles: [],
            currentMultiplier: 1.0,
            gameActive: false,
            lastGameProfit: 0,
            totalMinesProfit: 0,
            chance: 81,
            maxBet: 0.001,
            resetOnLoss: true,
            increaseOnWin: false,
            increasePercentage: 10
        },
        wagerStats: {
            betlose: 0, 
            betsafe: false, 
            basebet: 0, 
            nextbet: 0, 
            chanceNormal: 97, 
            chanceRecovery: 25, 
            chanceMax: 99,
            simplestats: {
                stopwin: false, 
                reset: false, 
                recov: false, 
                mostbet: 0, 
                balhi: 0, 
                balst: 0,
                maxdrop: 0, 
                profitc: 0, 
                drop: 0
            },
            xstopwin: [0, 0, 0, 0, 0, 5],
            basebetMode: "percentage",
            basebetPercentage: 1.0,
            basebetFixed: 0.00000001
        },
        labouchere: {
            sequence: [0.001, 0.002, 0.003, 0.004],
            currentSequence: [],
            targetProfit: 10,
            betAmount: 0.001,
            nextBetIndex: 0,
            betOn: 'black',
            recoveryMode: false,
            chance: 49.5,
            maxBet: 0.01,
            resetOnMaxBet: true
        },
        rotationState: {
            initialBalance: 0,
            wagerLossThreshold: 0.001,
            severeLossThreshold: 0.01,
            inRecovery: false,
            stepLimit: 10000,
            stepLimitMultiplier: 1.1,
            comingFromMines: false,
            minesRotationCounter: 0
        },
        telegramReport: {
            lastReportTime: 0,
            reportInterval: 5 * 60 * 1000,
            isReporting: false
        },
        minimized: false
    };

    const API = {
        async syncOnce() {
            try {
                // Try to get token from various sources
                bot.token = localStorage.getItem('apitoken') || 
                           localStorage.getItem('accessToken') ||
                           localStorage.getItem('token') ||
                           (document.cookie.match(/session=([^;]+)/i) ? document.cookie.match(/session=([^;]+)/i)[1] : null) ||
                           (document.cookie.match(/access_token=([^;]+)/i) ? document.cookie.match(/access_token=([^;]+)/i)[1] : null);
                
                if (!bot.token) {
                    bot.stakeUser = "Guest (Demo Mode)";
                    bot.isDemo = true;
                    console.log("No API token found, using Demo Mode");
                    return;
                }

                const res = await fetch(`${CONFIG.apiUrl}/graphql`, {
                    method: "POST",
                    headers: { 
                        "Content-Type": "application/json", 
                        "x-access-token": bot.token 
                    },
                    body: JSON.stringify({ 
                        query: `query{user{name balances{available{amount currency}}}}` 
                    })
                });
                
                const json = await res.json();
                if (json?.data?.user) {
                    bot.stakeUser = json.data.user.name;
                    const userEl = document.getElementById("user-name") || document.getElementById("st-user");
                    if (userEl) userEl.innerText = "User: " + bot.stakeUser;
                    
                    const bals = json.data.user.balances || [];
                    const sel = document.getElementById("p-currency");
                    if (sel && sel.options.length === 0) {
                        bals.forEach(b => {
                            const opt = new Option(b.available.currency.toUpperCase(), b.available.currency);
                            if(b.available.currency === "doge") opt.selected = true;
                            sel.add(opt);
                        });
                        bot.selectedCurrency = sel.value;
                    }
                }
            } catch (e) {
                console.log("Sync error:", e);
                bot.stakeUser = "Error Loading";
            }
        },

        async getBalance(coin) {
            if (bot.isDemo) {
                return 100.0; // Demo balance
            }
            
            try {
                const res = await fetch(`${CONFIG.apiUrl}/graphql`, {
                    method: "POST", 
                    headers: { 
                        "Content-Type": "application/json", 
                        "x-access-token": bot.token 
                    },
                    body: JSON.stringify({ 
                        query: `query{user{balances{available{amount currency}}}}` 
                    })
                });
                const json = await res.json();
                const active = json.data.user.balances.find(b => 
                    b.available.currency.toLowerCase() === coin.toLowerCase()
                );
                return active ? parseFloat(active.available.amount) : 0;
            } catch (e) { 
                console.log("Balance error:", e);
                return 0; 
            }
        },

        async placeBet(amount, chance) {
            if (bot.isDemo) {
                const dly = 100; // Demo delay
                return new Promise((r) => {
                    const win = Math.random() * 100 < chance;
                    setTimeout(() => {
                        r({ 
                            diceRoll: { 
                                amount: amount, 
                                payout: win ? (amount * (99 / chance)) : 0 
                            } 
                        });
                    }, dly);
                });
            }
            
            const payload = { 
                amount: parseFloat(amount.toFixed(8)), 
                currency: bot.selectedCurrency, 
                target: 100 - chance, 
                condition: "above", 
                identifier: Math.random().toString(36).slice(2) 
            };
            
            try {
                const r = await fetch(`${CONFIG.apiUrl}/casino/dice/roll`, { 
                    method: "POST", 
                    headers: { 
                        "Content-Type": "application/json", 
                        "x-access-token": bot.token 
                    }, 
                    body: JSON.stringify(payload) 
                });
                return r.json();
            } catch (error) {
                console.error("Bet error:", error);
                return null;
            }
        },

        async createMinesGame(amount, minesCount, gridSize = 5) {
            if (bot.isDemo) {
                return new Promise((r) => {
                    setTimeout(() => {
                        const gameId = 'demo-' + Math.random().toString(36).substr(2, 9);
                        bot.minesStats.currentGameId = gameId;
                        bot.minesStats.revealedTiles = [];
                        bot.minesStats.currentMultiplier = 1.0;
                        bot.minesStats.gameActive = true;
                        
                        r({
                            minesGame: {
                                id: gameId,
                                amount: amount,
                                minesCount: minesCount,
                                gridSize: gridSize,
                                status: 'active'
                            }
                        });
                    }, 500);
                });
            }
            
            const payload = {
                amount: parseFloat(amount.toFixed(8)),
                currency: bot.selectedCurrency,
                minesCount: minesCount,
                gridSize: gridSize
            };
            
            try {
                const r = await fetch(`${CONFIG.apiUrl}/casino/mines/create`, {
                    method: "POST",
                    headers: { 
                        "Content-Type": "application/json", 
                        "x-access-token": bot.token 
                    },
                    body: JSON.stringify(payload)
                });
                const data = await r.json();
                
                if (data?.data?.minesGame) {
                    bot.minesStats.currentGameId = data.data.minesGame.id;
                    bot.minesStats.revealedTiles = [];
                    bot.minesStats.currentMultiplier = 1.0;
                    bot.minesStats.gameActive = true;
                }
                
                return data;
            } catch (error) {
                console.error('Mines create error:', error);
                return null;
            }
        },

        async revealMinesTile(gameId, tile) {
            if (bot.isDemo) {
                return new Promise((r) => {
                    setTimeout(() => {
                        const isMine = Math.random() < (bot.minesStats.minesCount / (bot.minesStats.gridSize * bot.minesStats.gridSize));
                        
                        if (isMine) {
                            bot.minesStats.gameActive = false;
                            bot.minesStats.lastGameProfit = -bot.minesStats.betAmount;
                            r({
                                minesReveal: {
                                    gameId: gameId,
                                    tile: tile,
                                    isMine: true,
                                    multiplier: bot.minesStats.currentMultiplier,
                                    payout: 0,
                                    gameStatus: 'lost'
                                }
                            });
                        } else {
                            bot.minesStats.revealedTiles.push(tile);
                            bot.minesStats.currentMultiplier += 0.1;
                            
                            if (bot.minesStats.currentMultiplier >= bot.minesStats.autoCashout) {
                                const payout = bot.minesStats.betAmount * bot.minesStats.currentMultiplier;
                                bot.minesStats.gameActive = false;
                                bot.minesStats.lastGameProfit = payout - bot.minesStats.betAmount;
                                r({
                                    minesReveal: {
                                        gameId: gameId,
                                        tile: tile,
                                        isMine: false,
                                        multiplier: bot.minesStats.currentMultiplier,
                                        payout: payout,
                                        gameStatus: 'cashed_out'
                                    }
                                });
                            } else {
                                r({
                                    minesReveal: {
                                        gameId: gameId,
                                        tile: tile,
                                        isMine: false,
                                        multiplier: bot.minesStats.currentMultiplier,
                                        payout: 0,
                                        gameStatus: 'active'
                                    }
                                });
                            }
                        }
                    }, 500);
                });
            }
            
            const payload = {
                gameId: gameId,
                tile: tile
            };
            
            try {
                const r = await fetch(`${CONFIG.apiUrl}/casino/mines/reveal`, {
                    method: "POST",
                    headers: { 
                        "Content-Type": "application/json", 
                        "x-access-token": bot.token 
                    },
                    body: JSON.stringify(payload)
                });
                return await r.json();
            } catch (error) {
                console.error('Mines reveal error:', error);
                return null;
            }
        },

        async cashoutMines(gameId) {
            if (bot.isDemo) {
                return new Promise((r) => {
                    setTimeout(() => {
                        const payout = bot.minesStats.betAmount * bot.minesStats.currentMultiplier;
                        bot.minesStats.gameActive = false;
                        bot.minesStats.lastGameProfit = payout - bot.minesStats.betAmount;
                        r({
                            minesCashout: {
                                gameId: gameId,
                                multiplier: bot.minesStats.currentMultiplier,
                                payout: payout,
                                gameStatus: 'cashed_out'
                            }
                        });
                    }, 500);
                });
            }
            
            const payload = {
                gameId: gameId
            };
            
            try {
                const r = await fetch(`${CONFIG.apiUrl}/casino/mines/cashout`, {
                    method: "POST",
                    headers: { 
                        "Content-Type": "application/json", 
                        "x-access-token": bot.token 
                    },
                    body: JSON.stringify(payload)
                });
                return await r.json();
            } catch (error) {
                console.error('Mines cashout error:', error);
                return null;
            }
        },

        async sendTelegramReport(reportText) {
            try {
                const url = `https://api.telegram.org/bot${CONFIG.tgToken}/sendMessage`;
                const response = await fetch(url, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        chat_id: CONFIG.tgChatId,
                        text: reportText,
                        parse_mode: 'HTML',
                        disable_web_page_preview: true
                    })
                });
                return await response.json();
            } catch (error) {
                console.error('Telegram report error:', error);
                return null;
            }
        }
    };

    // Helper Functions
    function setNewBaseChance() {
        const min = 5;
        const max = 12;
        bot.baseChance = parseFloat((Math.random() * (max - min) + min).toFixed(1));
        bot.currentChance = bot.baseChance;
        bot.singleChanceBets = 0;
        bot.singleChanceLimit = Math.round(99 / bot.baseChance);
        bot.tg = bot.perStep;
    }

    function initMinesMode() {
        const ms = bot.minesStats;
        
        ms.betsBeforeRotation = 3;
        ms.minesCount = 3;
        ms.gridSize = 5;
        ms.betAmount = 0.00000001;
        ms.autoCashout = 1.5;
        ms.targetProfit = 0.00000010;
        
        const totalTiles = ms.gridSize * ms.gridSize;
        const safeTiles = totalTiles - ms.minesCount;
        ms.chance = (safeTiles / totalTiles * 100).toFixed(1);
        
        ms.currentMineBets = 0;
        ms.recoveryMode = bot.rotationState.inRecovery;
        ms.gameActive = false;
        ms.currentGameId = null;
        ms.revealedTiles = [];
        ms.currentMultiplier = 1.0;
        
        updateLogs(0, 0, 0, `MINES: Initialized - ${ms.minesCount} mines on ${ms.gridSize}x${ms.gridSize} grid`, true);
        updateLogs(0, 0, 0, `MINES: ${ms.betsBeforeRotation} bets before rotation, Auto-cashout: ${ms.autoCashout}x`, true);
        updateMinesUI();
    }

    async function minesBetLogic() {
        const ms = bot.minesStats;
        
        if (ms.currentMineBets >= ms.betsBeforeRotation) {
            const nextEnabledMode = getNextEnabledMode(['orion', 'wager', 'labouchere']);
            if (nextEnabledMode) {
                bot.mode = nextEnabledMode;
                bot.rotationState.comingFromMines = true;
                ms.currentMineBets = 0;
                
                if (bot.mode === "orion") {
                    setNewBaseChance();
                } else if (bot.mode === "wager") {
                    initWagerMode();
                } else if (bot.mode === "labouchere") {
                    initLabouchere();
                }
                
                updateLogs(0, 0, 0, `MINES: Rotation to ${bot.mode.toUpperCase()} after ${ms.betsBeforeRotation} bets`, true);
                return { rotate: true };
            }
        }
        
        if (!ms.gameActive || !ms.currentGameId) {
            const gameData = await API.createMinesGame(ms.betAmount, ms.minesCount, ms.gridSize);
            if (!gameData) {
                updateLogs(0, 0, 0, "MINES: Failed to create game", true);
                return { rotate: true };
            }
            
            ms.currentMineBets++;
            updateLogs(ms.betAmount, 0, ms.chance, `MINES: Started game ${ms.currentMineBets}/${ms.betsBeforeRotation}`);
            updateMinesUI();
        }
        
        let tile;
        const totalTiles = ms.gridSize * ms.gridSize;
        
        do {
            tile = Math.floor(Math.random() * totalTiles);
        } while (ms.revealedTiles.includes(tile));
        
        const revealData = await API.revealMinesTile(ms.currentGameId, tile);
        
        if (!revealData) {
            updateLogs(0, 0, 0, "MINES: Failed to reveal tile", true);
            return { rotate: true };
        }
        
        const reveal = revealData?.data?.minesReveal || revealData?.minesReveal;
        
        if (reveal) {
            if (reveal.isMine) {
                const profit = -ms.betAmount;
                updateStatsFromMines(profit, ms.betAmount);
                updateLogs(ms.betAmount, profit, ms.chance, `MINES: ğŸ’£ Mine hit! Multiplier: ${reveal.multiplier}x`);
                
                ms.gameActive = false;
                ms.lastGameProfit = profit;
                ms.totalMinesProfit += profit;
                
                if (ms.resetOnLoss) {
                    ms.betAmount = 0.00000001;
                }
                
                return { rotate: false, gameEnded: true };
            } else {
                ms.revealedTiles.push(tile);
                ms.currentMultiplier = reveal.multiplier;
                
                if (reveal.gameStatus === 'cashed_out' || ms.currentMultiplier >= ms.autoCashout) {
                    const profit = reveal.payout - ms.betAmount;
                    updateStatsFromMines(profit, ms.betAmount);
                    updateLogs(ms.betAmount, profit, ms.chance, `MINES: âœ… Cashed out! Multiplier: ${reveal.multiplier}x Profit: ${profit.toFixed(8)}`);
                    
                    ms.gameActive = false;
                    ms.lastGameProfit = profit;
                    ms.totalMinesProfit += profit;
                    
                    if (ms.increaseOnWin && profit > 0) {
                        const increase = ms.betAmount * (ms.increasePercentage / 100);
                        ms.betAmount += increase;
                        updateLogs(0, 0, 0, `MINES: Bet increased by ${ms.increasePercentage}% to ${ms.betAmount.toFixed(8)}`, true);
                    }
                    
                    return { rotate: false, gameEnded: true };
                } else {
                    updateLogs(ms.betAmount, 0, ms.chance, `MINES: Safe! Multiplier: ${reveal.multiplier}x`);
                    updateMinesUI();
                    return { rotate: false, gameEnded: false };
                }
            }
        }
        
        return { rotate: false, gameEnded: false };
    }

    function updateStatsFromMines(profit, wagered) {
        bot.stats.bets++;
        bot.stats.wagered += wagered;
        bot.stats.profit += profit;
        bot.stats.currentBal += profit;
        
        if (profit > 0) {
            bot.stats.wins++;
        } else {
            bot.stats.loss++;
        }
        
        if (bot.stats.currentBal < bot.stats.startBal) {
            let dd = bot.stats.startBal - bot.stats.currentBal;
            let ddPerc = (dd / bot.stats.startBal) * 100;
            if (dd > bot.stats.maxDD) bot.stats.maxDD = dd;
            if (ddPerc > bot.stats.maxDDPerc) bot.stats.maxDDPerc = ddPerc;
        }
        
        if (bot.stats.profit >= bot.targetAbs) { 
            bot.isRunning = false; 
            updateLogs(0, 0, 0, "ğŸ¯ TARGET SUCCESS!", true);
        } else if (bot.stats.profit <= -bot.stopLossAbs) { 
            bot.isRunning = false; 
            updateLogs(0, 0, 0, "ğŸ›‘ STOP LOSS REACHED!", true);
        }
    }

    function updateMinesUI() {
        const ms = bot.minesStats;
        
        if (document.getElementById("m-current-bets")) {
            document.getElementById("m-current-bets").innerText = `${ms.currentMineBets}/${ms.betsBeforeRotation}`;
            document.getElementById("m-bet-amount-value").innerText = ms.betAmount.toFixed(8);
            document.getElementById("m-mines-count-value").innerText = ms.minesCount;
            document.getElementById("m-grid-size-value").innerText = `${ms.gridSize}x${ms.gridSize}`;
            document.getElementById("m-chance-value").innerText = ms.chance + "%";
            document.getElementById("m-auto-cashout-value").innerText = ms.autoCashout + "x";
            document.getElementById("m-total-profit").innerText = ms.totalMinesProfit.toFixed(8);
            document.getElementById("m-last-profit").innerText = ms.lastGameProfit.toFixed(8);
            document.getElementById("m-game-active").innerText = ms.gameActive ? "YES" : "NO";
            document.getElementById("m-current-multiplier").innerText = ms.currentMultiplier.toFixed(2) + "x";
            
            updateMinesGridVisualization();
            
            document.getElementById("m-rotation-info").innerText = 
                `After ${ms.betsBeforeRotation - ms.currentMineBets} more bets`;
        }
    }

    function updateMinesGridVisualization() {
        const ms = bot.minesStats;
        const gridContainer = document.getElementById("m-grid-visual");
        
        if (!gridContainer) return;
        
        gridContainer.innerHTML = '';
        const totalTiles = ms.gridSize * ms.gridSize;
        
        for (let i = 0; i < totalTiles; i++) {
            const tile = document.createElement("div");
            tile.className = "mines-tile";
            tile.dataset.tile = i;
            
            if (ms.revealedTiles.includes(i)) {
                tile.classList.add("revealed");
                tile.textContent = "âœ“";
                tile.style.backgroundColor = "#10b981";
                tile.style.color = "white";
            } else if (ms.gameActive) {
                tile.textContent = "?";
                tile.style.backgroundColor = "#374151";
                tile.style.color = "#9ca3af";
            } else {
                tile.textContent = "";
                tile.style.backgroundColor = "#1f2937";
            }
            
            tile.style.width = `${100 / ms.gridSize}%`;
            tile.style.height = `${100 / ms.gridSize}%`;
            
            gridContainer.appendChild(tile);
        }
    }

    function initWagerMode() {
        if (bot.wagerStats.basebetMode === "percentage") {
            bot.wagerStats.basebet = bot.stats.currentBal * (bot.wagerStats.basebetPercentage / 100);
        } else {
            bot.wagerStats.basebet = bot.wagerStats.basebetFixed;
        }
        
        bot.wagerStats.nextbet = bot.wagerStats.basebet;
        bot.wagerStats.betlose = 0;
        bot.wagerStats.betsafe = false;
        bot.wagerStats.simplestats = {
            stopwin: false, reset: false, recov: false, 
            mostbet: bot.wagerStats.basebet, 
            balhi: bot.stats.currentBal, 
            balst: bot.stats.currentBal,
            maxdrop: 0, profitc: 0, drop: 0
        };
        
        bot.wagerStats.chanceNormal = 97;
        bot.wagerStats.chanceRecovery = 25;
        bot.wagerStats.chanceMax = 99;
        
        bot.currentChance = bot.wagerStats.chanceNormal;
        
        updateLogs(0, 0, 0, `WAGER: Base bet set to ${bot.wagerStats.basebet.toFixed(8)} (${bot.wagerStats.basebetMode})`, true);
    }

    function updateWagerStats(profit) {
        const ws = bot.wagerStats;
        const ss = ws.simplestats;
        
        ss.profitc += profit;
        
        if (ss.profitc >= 0) {
            if (ss.stopwin) {
                bot.isRunning = false;
                updateLogs(0, 0, 0, "WAGER: Stop condition reached", true);
                return;
            }
            ss.profitc = 0;
            ss.balhi = bot.stats.currentBal;
            ss.reset = false;
            ss.recov = false;
        }
        
        ss.drop = ss.balhi - bot.stats.currentBal;
        if (ss.drop > ss.maxdrop) {
            ss.maxdrop = ss.drop;
        }
        
        if (ws.nextbet > ss.mostbet) {
            ss.mostbet = ws.nextbet;
        }
        
        // Update progress bars
        if (ws.xstopwin[0] > 0 && ss.balhi > 0) {
            const dropPercent = ss.drop/ss.balhi*100;
            updateProgressBar("w-progress-drop", dropPercent, ws.xstopwin[0]);
        }
        
        updateWagerUI();
    }

    function wagerBetLogic(profit) {
        const ws = bot.wagerStats;
        
        ws.betlose += profit;
        
        if (ws.betlose >= 0) {
            ws.betsafe = false;
            ws.betlose = 0;
            ws.nextbet = ws.basebet;
            bot.currentChance = ws.chanceNormal;
        } else {
            if (!ws.betsafe) {
                bot.currentChance = ws.chanceRecovery;
                ws.betsafe = true;
            }
        }
        
        if (ws.betsafe) {
            if (bot.stats.bets % 1 === 0) {
                bot.currentChance += 0.5;
                if (bot.currentChance > ws.chanceMax) {
                    bot.currentChance = ws.chanceNormal;
                    ws.betsafe = false;
                    ws.betlose = 0;
                    ws.nextbet = ws.basebet;
                }
            }
            ws.nextbet = Math.abs(ws.betlose)/((99/bot.currentChance)-1)*0.5;
        }
        
        const minbet = 0.00000001;
        if (ws.nextbet < minbet) ws.nextbet = minbet;
        
        updateWagerStats(profit);
        return ws.nextbet;
    }

    function initLabouchere() {
        const seqInput = "0.001,0.002,0.003,0.004";
        bot.labouchere.sequence = seqInput.split(',').map(x => parseFloat(x.trim()) || 0.001);
        bot.labouchere.currentSequence = [...bot.labouchere.sequence];
        bot.labouchere.targetProfit = 10;
        bot.labouchere.betOn = Math.random() > 0.5 ? 'black' : 'red';
        bot.labouchere.recoveryMode = bot.rotationState.inRecovery;
        
        bot.labouchere.chance = 49.5;
        bot.labouchere.maxBet = 0.01;
        bot.labouchere.resetOnMaxBet = true;
        
        bot.currentChance = bot.labouchere.chance;
        
        updateLogs(0, 0, 0, `LABOUCHERE: Sequence set to ${bot.labouchere.sequence.join(', ')}`, true);
        updateLabouchereUI();
    }

    function labouchereBetLogic(win) {
        const lb = bot.labouchere;
        
        if (lb.currentSequence.length === 0) {
            lb.currentSequence = [...lb.sequence];
            updateLogs(0, 0, 0, "LABOUCHERE: Sequence reset", true);
        }
        
        if (lb.currentSequence.length === 1) {
            lb.betAmount = lb.currentSequence[0];
        } else {
            lb.betAmount = lb.currentSequence[0] + lb.currentSequence[lb.currentSequence.length - 1];
        }
        
        if (lb.betAmount > lb.maxBet && lb.maxBet > 0) {
            updateLogs(0, 0, 0, `LABOUCHERE: Bet ${lb.betAmount.toFixed(8)} exceeds max bet ${lb.maxBet.toFixed(8)}`, true);
            
            if (lb.resetOnMaxBet) {
                lb.currentSequence = [...lb.sequence];
                updateLogs(0, 0, 0, "LABOUCHERE: Sequence reset (max bet reached)", true);
                
                if (lb.currentSequence.length === 1) {
                    lb.betAmount = lb.currentSequence[0];
                } else {
                    lb.betAmount = lb.currentSequence[0] + lb.currentSequence[lb.currentSequence.length - 1];
                }
            } else {
                lb.betAmount = lb.maxBet;
                updateLogs(0, 0, 0, `LABOUCHERE: Bet capped at ${lb.maxBet.toFixed(8)}`, true);
            }
        }
        
        if (lb.betAmount > bot.stats.currentBal) {
            lb.betAmount = bot.stats.currentBal;
            updateLogs(0, 0, 0, `LABOUCHERE: Adjusted bet to ${lb.betAmount.toFixed(8)} (balance limit)`, true);
        }
        
        if (win) {
            lb.currentSequence.shift();
            lb.currentSequence.pop();
            
            if (lb.currentSequence.length === 0) {
                updateLogs(lb.betAmount, lb.betAmount, lb.chance, "LABOUCHERE: Sequence completed!", true);
                return { betAmount: 0, completed: true };
            }
        } else {
            lb.currentSequence.push(lb.betAmount);
        }
        
        updateLabouchereUI();
        return { betAmount: lb.betAmount, completed: false };
    }

    function checkRotation() {
        if (!bot.rotationState.initialBalance || bot.rotationState.initialBalance === 0) {
            bot.rotationState.initialBalance = bot.stats.currentBal;
            return false;
        }
        
        const rs = bot.rotationState;
        const currentLoss = (rs.initialBalance - bot.stats.currentBal) / rs.initialBalance;
        
        if (rs.comingFromMines && bot.stats.currentBal >= rs.initialBalance) {
            bot.mode = "mines";
            rs.comingFromMines = false;
            rs.inRecovery = false;
            initMinesMode();
            updateLogs(0, 0, 0, "ROTATION: Returning to Mines mode (Balance recovered)", true);
            return true;
        }
        
        if (bot.mode !== "mines") {
            if (!rs.inRecovery && bot.enabledModes.mines) {
                const profitSinceStart = bot.stats.currentBal - rs.initialBalance;
                const profitTarget = rs.initialBalance * 0.01;
                
                if (profitSinceStart >= profitTarget) {
                    bot.mode = "mines";
                    initMinesMode();
                    updateLogs(0, 0, 0, `ROTATION: Returning to Mines (Profit target reached: ${profitSinceStart.toFixed(8)})`, true);
                    return true;
                }
            }
            
            if (bot.mode === "wager" && currentLoss > rs.wagerLossThreshold) {
                if (bot.enabledModes.labouchere) {
                    bot.mode = "labouchere";
                    rs.inRecovery = true;
                    initLabouchere();
                    updateLogs(0, 0, 0, `ROTATION: Switching to Labouchere (Loss: ${(currentLoss*100).toFixed(2)}%)`, true);
                    return true;
                } else if (bot.enabledModes.orion) {
                    bot.mode = "orion";
                    rs.inRecovery = true;
                    setNewBaseChance();
                    updateLogs(0, 0, 0, `ROTATION: Switching to Orion (Loss: ${(currentLoss*100).toFixed(2)}%)`, true);
                    return true;
                }
            }
            
            if (bot.mode === "labouchere" && currentLoss > rs.severeLossThreshold) {
                if (bot.enabledModes.orion) {
                    bot.mode = "orion";
                    rs.inRecovery = true;
                    setNewBaseChance();
                    updateLogs(0, 0, 0, `ROTATION: Switching to Orion (Severe Loss: ${(currentLoss*100).toFixed(2)}%)`, true);
                    return true;
                }
            }
            
            if (bot.mode === "orion" && bot.stats.bets >= rs.stepLimit) { 
                rs.stepLimit = Math.round(rs.stepLimit * rs.stepLimitMultiplier);
                
                if (bot.enabledModes.mines) {
                    bot.mode = "mines";
                    initMinesMode();
                    updateLogs(0, 0, 0, `ğŸ”„ ORION: Step limit reached. Switching to MINES.`, true);
                    return true;
                }
            }
        }
        
        return false;
    }

    function getNextEnabledMode(modesList = ['mines', 'orion', 'wager', 'labouchere']) {
        const modes = modesList;
        let currentIndex = modes.indexOf(bot.mode);
        
        if (currentIndex === -1) {
            currentIndex = 0;
        }
        
        for (let i = 1; i <= modes.length; i++) {
            const nextIndex = (currentIndex + i) % modes.length;
            const nextMode = modes[nextIndex];
            if (bot.enabledModes[nextMode]) {
                return nextMode;
            }
        }
        
        return bot.mode;
    }

    function generateTelegramReport() {
        const now = new Date();
        const runtime = bot.stats.startTime ? Math.floor((now - bot.stats.startTime) / 1000) : 0;
        const hours = Math.floor(runtime / 3600);
        const minutes = Math.floor((runtime % 3600) / 60);
        const seconds = runtime % 60;
        
        const winRate = bot.stats.bets > 0 ? ((bot.stats.wins / bot.stats.bets) * 100).toFixed(2) : 0;
        const profitPercent = bot.stats.startBal > 0 ? (bot.stats.profit / bot.stats.startBal * 100).toFixed(2) : 0;
        
        let modeDetails = '';
        if (bot.mode === 'mines') {
            const ms = bot.minesStats;
            modeDetails = `
ğŸ’£ <b>MINES MODE DETAILS</b>
â”œâ”€ Current Bets: ${ms.currentMineBets}/${ms.betsBeforeRotation}
â”œâ”€ Bet Amount: ${ms.betAmount.toFixed(8)}
â”œâ”€ Mines: ${ms.minesCount} on ${ms.gridSize}x${ms.gridSize}
â”œâ”€ Chance: ${ms.chance}%
â”œâ”€ Auto Cashout: ${ms.autoCashout}x
â”œâ”€ Current Multiplier: ${ms.currentMultiplier.toFixed(2)}x
â”œâ”€ Game Active: ${ms.gameActive ? 'YES' : 'NO'}
â”œâ”€ Last Profit: ${ms.lastGameProfit.toFixed(8)}
â”œâ”€ Total Mines Profit: ${ms.totalMinesProfit.toFixed(8)}
â””â”€ Next Rotation: After ${ms.betsBeforeRotation - ms.currentMineBets} bets`;
        } else if (bot.mode === 'wager') {
            const ws = bot.wagerStats;
            const ss = ws.simplestats;
            const dropPercent = ss.balhi > 0 ? (ss.drop / ss.balhi * 100).toFixed(2) : 0;
            
            modeDetails = `
ğŸ¯ <b>WAGER MODE DETAILS</b>
â”œâ”€ Base Bet: ${ws.basebet.toFixed(8)}
â”œâ”€ Base Bet Mode: ${ws.basebetMode.toUpperCase()}
â”œâ”€ Next Bet: ${ws.nextbet.toFixed(8)}
â”œâ”€ Current Chance: ${bot.currentChance.toFixed(1)}%
â”œâ”€ Bet Safe: ${ws.betsafe ? 'YES' : 'NO'}
â”œâ”€ Status: ${ss.reset ? 'LOWBET ' : 'NORMAL '}${ss.recov ? 'RECOVERY' : 'STEADY'}
â”œâ”€ Current Drop: ${ss.drop.toFixed(8)} (${dropPercent}%)
â””â”€ Profit Counter: ${ss.profitc.toFixed(8)}`;
        } else if (bot.mode === 'labouchere') {
            const lb = bot.labouchere;
            modeDetails = `
ğŸ² <b>LABOUCHERE DETAILS</b>
â”œâ”€ Sequence: [${lb.currentSequence.map(x => x.toFixed(8)).join(', ')}]
â”œâ”€ Next Bet: ${lb.betAmount.toFixed(8)}
â”œâ”€ Bet On: ${lb.betOn.toUpperCase()}
â”œâ”€ Chance: ${lb.chance}%
â”œâ”€ Max Bet: ${lb.maxBet.toFixed(8)}
â””â”€ Recovery Mode: ${lb.recoveryMode ? 'YES' : 'NO'}`;
        } else if (bot.mode === 'orion') {
            modeDetails = `
âš¡ <b>ORION DETAILS</b>
â”œâ”€ Base Chance: ${bot.baseChance}%
â”œâ”€ Current Chance: ${bot.currentChance}%
â”œâ”€ Single Chance Bets: ${bot.singleChanceBets}/${bot.singleChanceLimit}
â”œâ”€ Step Target: ${bot.perStep.toFixed(8)}
â””â”€ Current TG: ${bot.tg.toFixed(8)}`;
        }
        
        const rotationStatus = bot.rotationState.inRecovery ? 'ğŸ”„ RECOVERY' : 
                              bot.rotationState.comingFromMines ? 'â© FROM MINES' : 'ğŸŸ¢ NORMAL';
        
        const report = `
ğŸš€ <b>ORION v8.0 + MINES - AUTO REPORT</b>
â° ${now.toLocaleString()}
â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”

ğŸ‘¤ <b>USER:</b> ${bot.stakeUser}
ğŸ’° <b>CURRENCY:</b> ${bot.selectedCurrency.toUpperCase()}
ğŸ® <b>MODE:</b> ${bot.mode.toUpperCase()} ${rotationStatus}
â±ï¸ <b>RUNTIME:</b> ${hours}h ${minutes}m ${seconds}s
â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”

ğŸ“Š <b>STATISTICS</b>
â”œâ”€ Balance: ${bot.stats.currentBal.toFixed(8)}
â”œâ”€ Start Balance: ${bot.stats.startBal.toFixed(8)}
â”œâ”€ Profit: ${bot.stats.profit.toFixed(8)} (${profitPercent}%)
â”œâ”€ Total Wagered: ${bot.stats.wagered.toFixed(8)}
â”œâ”€ Total Bets: ${bot.stats.bets}
â”œâ”€ Wins/Losses: ${bot.stats.wins}/${bot.stats.loss}
â”œâ”€ Win Rate: ${winRate}%
â”œâ”€ Max Drawdown: ${bot.stats.maxDD.toFixed(8)} (${bot.stats.maxDDPerc.toFixed(2)}%)
â””â”€ Target/Stop: ${bot.targetAbs.toFixed(8)} / ${Math.abs(bot.stopLossAbs).toFixed(8)}

${modeDetails}
â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”

âš™ï¸ <b>SYSTEM STATUS</b>
â”œâ”€ Bot Running: ${bot.isRunning ? 'âœ… YES' : 'âŒ NO'}
â”œâ”€ Demo Mode: ${bot.isDemo ? 'âœ… YES' : 'âŒ NO'}
â””â”€ Last Update: ${new Date().toLocaleTimeString()}
        `;
        
        return report;
    }

    function checkAndSendReport() {
        if (!bot.isRunning || bot.telegramReport.isReporting) return;
        
        const now = Date.now();
        const timeSinceLastReport = now - bot.telegramReport.lastReportTime;
        
        if (timeSinceLastReport >= bot.telegramReport.reportInterval) {
            bot.telegramReport.isReporting = true;
            
            try {
                const report = generateTelegramReport();
                API.sendTelegramReport(report).then(result => {
                    if (result?.ok) {
                        updateLogs(0, 0, 0, `ğŸ“Š Telegram report sent successfully`, true);
                    } else {
                        updateLogs(0, 0, 0, `âš ï¸  Failed to send Telegram report`, true);
                    }
                }).catch(error => {
                    console.error('Report sending error:', error);
                }).finally(() => {
                    bot.telegramReport.lastReportTime = now;
                    bot.telegramReport.isReporting = false;
                });
            } catch (error) {
                console.error('Report generation error:', error);
                bot.telegramReport.isReporting = false;
            }
        }
    }

    async function runLoop() {
        if (!bot.isRunning) return;
        
        try {
            checkRotation();
            checkAndSendReport();
            
            let nextBet = 0;
            
            if (bot.mode === "mines") {
                const minesResult = await minesBetLogic();
                
                if (minesResult.rotate) {
                    setTimeout(runLoop, 100);
                    return;
                }
                
                if (minesResult.gameEnded) {
                    setTimeout(runLoop, 1000);
                    return;
                } else {
                    setTimeout(runLoop, 500);
                    return;
                }
                
            } else if (bot.mode === "orion") {
                if (bot.singleChanceBets < bot.singleChanceLimit) {
                    bot.currentChance = bot.baseChance;
                } else {
                    bot.currentChance = Math.floor(Math.random() * 11) + (bot.baseChance + 5);
                }

                const payout = 99 / bot.currentChance;
                const margin = 1.01;
                const minBetLimit = 0;
                const baseBet = 0.00000001;
                
                nextBet = (Math.abs(bot.tg) / (payout - 1)) * margin;
                if (bot.tg === bot.perStep) nextBet = baseBet;
                if (nextBet < minBetLimit) nextBet = minBetLimit;
                
            } else if (bot.mode === "wager") {
                nextBet = wagerBetLogic(0);
                
            } else if (bot.mode === "labouchere") {
                const lbResult = labouchereBetLogic(false);
                nextBet = lbResult.betAmount;
                bot.currentChance = bot.labouchere.chance;
            }

            if (bot.mode !== "mines") {
                if (nextBet <= 0) nextBet = 0.00000001;
                if (nextBet > bot.stats.currentBal && bot.stats.currentBal > 0) {
                    nextBet = bot.stats.currentBal;
                    updateLogs(0, 0, 0, `âš ï¸ Bet capped at balance: ${nextBet.toFixed(8)}`, true);
                }

                const res = await API.placeBet(nextBet, bot.currentChance);
                const d = res?.diceRoll;

                if (d) {
                    const win = d.payout > 0;
                    const pft = d.payout - d.amount;
                    
                    bot.stats.bets++; 
                    bot.stats.wagered += d.amount;
                    bot.stats.profit += pft; 
                    bot.stats.currentBal += pft;

                    if (win) {
                        bot.stats.wins++;
                    } else {
                        bot.stats.loss++;
                    }

                    if (bot.stats.currentBal < bot.stats.startBal) {
                        let dd = bot.stats.startBal - bot.stats.currentBal;
                        let ddPerc = (dd / bot.stats.startBal) * 100;
                        if (dd > bot.stats.maxDD) bot.stats.maxDD = dd;
                        if (ddPerc > bot.stats.maxDDPerc) bot.stats.maxDDPerc = ddPerc;
                    }

                    updateLogs(d.amount, pft, bot.currentChance);

                    if (bot.mode === "orion") {
                        if (win) {
                            setNewBaseChance();
                        } else {
                            bot.singleChanceBets++; 
                            bot.tg += (d.amount + bot.perStep);
                        }
                    } else if (bot.mode === "wager") {
                        wagerBetLogic(pft);
                    } else if (bot.mode === "labouchere") {
                        const result = labouchereBetLogic(win);
                        if (result.completed) {
                            updateLogs(0, 0, 0, "Labouchere sequence completed!", true);
                        }
                    }

                    if (bot.stats.profit >= bot.targetAbs) { 
                        bot.isRunning = false; 
                        updateLogs(0, 0, 0, "ğŸ¯ TARGET SUCCESS!", true);
                    }
                    else if (bot.stats.profit <= -bot.stopLossAbs) { 
                        bot.isRunning = false; 
                        updateLogs(0, 0, 0, "ğŸ›‘ STOP LOSS REACHED!", true);
                    }
                    else if (bot.mode === "orion" && bot.stats.bets >= bot.rotationState.stepLimit) { 
                        bot.rotationState.stepLimit = Math.round(bot.rotationState.stepLimit * bot.rotationState.stepLimitMultiplier);
                        
                        if (bot.enabledModes.mines) {
                            bot.mode = "mines";
                            initMinesMode();
                            updateLogs(0, 0, 0, `ğŸ”„ ORION: Step limit reached. Switching to MINES.`, true);
                        }
                    }
                }
            }
            
            if (bot.isRunning) {
                if (!bot.isDemo) {
                    const delay = bot.mode === "mines" ? 1000 : 60;
                    setTimeout(runLoop, delay);
                } else {
                    runLoop();
                }
            }
            
        } catch (e) { 
            console.error("Run loop error:", e);
            if (bot.isRunning) {
                setTimeout(runLoop, 1000); 
            }
        }
    }

    function updateLogs(amt, pft, ch, customMsg = null, isSystem = false) {
        const logBox = document.getElementById("p-logs");
        if (!logBox) return;
        
        const entry = document.createElement("div");
        entry.className = "log-entry";
        
        if (isSystem) {
            entry.style.color = "#ffcc00";
            entry.style.borderLeft = "3px solid #ffcc00";
        } else {
            entry.style.color = pft > 0 ? "#10b981" : "#ef4444";
            entry.style.borderLeft = pft > 0 ? "3px solid #10b981" : "3px solid #ef4444";
        }
        
        entry.style.margin = "3px 0";
        entry.style.padding = "2px 5px";
        entry.style.fontSize = "11px";
        entry.style.background = "rgba(0,0,0,0.3)";
        
        const modeBadge = `<span class="mode-badge" style="background: ${getModeColor()}; color: #000; padding: 1px 4px; border-radius: 3px; font-size: 9px; margin-right: 5px;">${bot.mode.toUpperCase()}</span>`;
        
        if (customMsg) {
            entry.innerHTML = `${modeBadge}<span class="log-time">${new Date().toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}</span> | ${customMsg}`;
        } else {
            entry.innerHTML = `${bot.isDemo ? '[DIRTY] ' : ''}${modeBadge}<span class="log-time">${new Date().toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}</span> | B: <span class="log-amount">${amt.toFixed(8)}</span> | P: <span class="log-profit">${pft.toFixed(8)}</span> | C: <span class="log-chance">${ch}%</span>`;
        }
        
        logBox.prepend(entry);
        if (logBox.children.length > 15) logBox.lastChild.remove();
    }

    function getModeColor() {
        switch(bot.mode) {
            case 'mines': return '#f59e0b';
            case 'orion': return '#00ccff';
            case 'wager': return '#10b981';
            case 'labouchere': return '#8b5cf6';
            default: return '#666';
        }
    }

    function updateWagerUI() {
        const ws = bot.wagerStats;
        const ss = ws.simplestats;
        
        if (document.getElementById("w-betlose")) {
            document.getElementById("w-betlose").innerText = ws.betlose.toFixed(8);
            document.getElementById("w-nextbet").innerText = ws.nextbet.toFixed(8);
            document.getElementById("w-basebet").innerText = ws.basebet.toFixed(8);
            document.getElementById("w-betsafe").innerText = ws.betsafe ? "YES" : "NO";
            document.getElementById("w-chance-current").innerText = bot.currentChance.toFixed(1) + "%";
            
            document.getElementById("w-profitc").innerText = ss.profitc.toFixed(8);
            document.getElementById("w-maxdrop").innerText = ss.maxdrop.toFixed(8);
            document.getElementById("w-dropnow").innerText = ss.drop.toFixed(8);
            document.getElementById("w-mostbet").innerText = ss.mostbet.toFixed(8);
            document.getElementById("w-status").innerText = `${ss.reset ? "LOWBET " : "NORMAL "}${ss.recov ? "RECOVERY" : "STEADY"}`;
            
            if (document.getElementById("w-basebet-mode")) {
                document.getElementById("w-basebet-mode").innerText = ws.basebetMode.toUpperCase();
            }
        }
    }

    function updateLabouchereUI() {
        const lb = bot.labouchere;
        
        if (document.getElementById("l-sequence-current")) {
            document.getElementById("l-sequence-current").innerText = lb.currentSequence.map(x => x.toFixed(8)).join(', ');
            document.getElementById("l-betamount").innerText = lb.betAmount.toFixed(8);
            document.getElementById("l-beton").innerText = lb.betOn.toUpperCase();
            document.getElementById("l-recovery").innerText = lb.recoveryMode ? "YES" : "NO";
            document.getElementById("l-chance-value").innerText = lb.chance + "%";
            document.getElementById("l-maxbet-value").innerText = lb.maxBet.toFixed(8);
        }
    }

    function updateProgressBar(id, current, max) {
        const bar = document.getElementById(id);
        if (!bar || max <= 0) return;
        
        const percent = Math.min((current / max) * 100, 100);
        bar.style.width = `${percent}%`;
        bar.style.backgroundColor = percent > 80 ? '#ef4444' : percent > 50 ? '#f59e0b' : '#10b981';
    }


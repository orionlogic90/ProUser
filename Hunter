                                <div class="stat-label">Streak</div>
                                <div class="stat-value" id="st-streak-value">0</div>
                                <div class="stat-subvalue" id="st-streak-type">Neutral</div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Logs -->
                <div class="section">
                    <div class="section-title">Activity Logs</div>
                    <div class="logs-container" id="p-logs">
                        <div style="color: #666; text-align: center; padding: 40px 0;">
                            Waiting for engine start...
                        </div>
                    </div>
                </div>
                
                <!-- Controls -->
                <div class="button-group">
                    <button id="p-start" class="btn btn-primary">â–¶ START</button>
                    <button id="p-stop" class="btn btn-danger">â¹ STOP</button>
                </div>
                
                <button id="telegram-report-btn" class="btn btn-warning">ğŸ“Š TG REPORT</button>
            </div>
        `;

        document.body.appendChild(wrapper);
        
        // Initialize mines grid
        updateMinesGridVisualization();
        
        // Add event listeners
        setupEventListeners();
        
        // Auto-sync
        setTimeout(() => {
            API.syncOnce();
        }, 1000);
        
        // Start update loop
        setInterval(updateUI, 1000);
    }

    function setupEventListeners() {
        // Tab switching
        document.querySelectorAll('.tab').forEach(tab => {
            tab.addEventListener('click', () => {
                document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
                document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
                tab.classList.add('active');
                document.getElementById(`tab-${tab.dataset.tab}`).classList.add('active');
            });
        });

        // Minimize/Close buttons
        document.querySelector('.control-btn.minimize').addEventListener('click', () => {
            bot.minimized = !bot.minimized;
            const content = document.querySelector('.content');
            const minimizeBtn = document.querySelector('.control-btn.minimize');
            
            if (bot.minimized) {
                content.style.display = 'none';
                minimizeBtn.textContent = 'â–¡';
            } else {
                content.style.display = 'block';
                minimizeBtn.textContent = '_';
            }
        });

        document.querySelector('.control-btn.close').addEventListener('click', () => {
            document.getElementById('orion-wrap').remove();
            window.ORION_BOT_INJECTED = false;
        });

        // Start button
        document.getElementById('p-start').addEventListener('click', async () => {
            if (bot.isRunning) return;
            
            bot.isRunning = true;
            bot.stats.startTime = Date.now();
            bot.rotationState.initialBalance = bot.stats.currentBal;
            
            // Get balance
            bot.stats.startBal = await API.getBalance(bot.selectedCurrency);
            bot.stats.currentBal = bot.stats.startBal;
            
            // Set targets
            bot.targetAbs = bot.stats.startBal * (parseFloat(document.getElementById('p-target-pct').value || 10) / 100);
            bot.stopLossAbs = bot.stats.startBal * (parseFloat(document.getElementById('p-stop-pct').value || 50) / 100);
            bot.perStep = bot.targetAbs / bot.rotationState.stepLimit;
            
            // Initialize current mode
            if (bot.mode === 'mines') initMinesMode();
            else if (bot.mode === 'orion') setNewBaseChance();
            else if (bot.mode === 'wager') initWagerMode();
            else if (bot.mode === 'labouchere') initLabouchere();
            
            updateLogs(0, 0, 0, `ğŸš€ Bot started in ${bot.mode.toUpperCase()} mode`, true);
            updateUI();
            
            // Start loop
            runLoop();
        });

        // Stop button
        document.getElementById('p-stop').addEventListener('click', () => {
            bot.isRunning = false;
            updateLogs(0, 0, 0, 'ğŸ›‘ Bot stopped', true);
            updateUI();
        });

        // Telegram report button
        document.getElementById('telegram-report-btn').addEventListener('click', async () => {
            const report = generateTelegramReport();
            await API.sendTelegramReport(report);
            updateLogs(0, 0, 0, 'ğŸ“Š Telegram report sent', true);
        });

        // Currency change
        document.getElementById('p-currency').addEventListener('change', (e) => {
            bot.selectedCurrency = e.target.value;
            document.getElementById('st-currency').textContent = e.target.value.toUpperCase();
        });

        // Demo mode toggle
        document.getElementById('p-demo-toggle').addEventListener('change', (e) => {
            bot.isDemo = e.target.checked;
            updateLogs(0, 0, 0, `Demo mode ${bot.isDemo ? 'enabled' : 'disabled'}`, true);
        });

        // Mode toggles
        document.getElementById('mode-mines').addEventListener('change', (e) => {
            bot.enabledModes.mines = e.target.checked;
        });
        
        document.getElementById('mode-orion').addEventListener('change', (e) => {
            bot.enabledModes.orion = e.target.checked;
        });
        
        document.getElementById('mode-wager').addEventListener('change', (e) => {
            bot.enabledModes.wager = e.target.checked;
        });
        
        document.getElementById('mode-labouchere').addEventListener('change', (e) => {
            bot.enabledModes.labouchere = e.target.checked;
        });

        // Mines settings
        document.getElementById('m-bets-before-rotation').addEventListener('change', (e) => {
            bot.minesStats.betsBeforeRotation = parseInt(e.target.value) || 3;
        });
        
        document.getElementById('m-bet-amount').addEventListener('change', (e) => {
            bot.minesStats.betAmount = parseFloat(e.target.value) || 0.00000001;
        });
        
        document.getElementById('m-mines-count').addEventListener('change', (e) => {
            bot.minesStats.minesCount = parseInt(e.target.value) || 3;
            updateMinesChance();
        });
        
        document.getElementById('m-grid-size').addEventListener('change', (e) => {
            bot.minesStats.gridSize = parseInt(e.target.value) || 5;
            updateMinesChance();
            updateMinesGridVisualization();
        });
        
        document.getElementById('m-auto-cashout').addEventListener('change', (e) => {
            bot.minesStats.autoCashout = parseFloat(e.target.value) || 1.5;
        });
        
        document.getElementById('m-reset-on-loss').addEventListener('change', (e) => {
            bot.minesStats.resetOnLoss = e.target.checked;
        });
        
        document.getElementById('m-increase-on-win').addEventListener('change', (e) => {
            bot.minesStats.increaseOnWin = e.target.checked;
        });

        // Make draggable
        makeDraggable(document.getElementById('orion-wrap'));
    }

    function updateMinesChance() {
        const ms = bot.minesStats;
        const totalTiles = ms.gridSize * ms.gridSize;
        const safeTiles = totalTiles - ms.minesCount;
        ms.chance = (safeTiles / totalTiles * 100).toFixed(1);
        document.getElementById('m-chance-value').textContent = ms.chance + '%';
    }

    function makeDraggable(element) {
        let pos1 = 0, pos2 = 0, pos3 = 0, pos4 = 0;
        const header = element.querySelector('.header');
        
        header.onmousedown = dragMouseDown;
        
        function dragMouseDown(e) {
            e = e || window.event;
            e.preventDefault();
            pos3 = e.clientX;
            pos4 = e.clientY;
            document.onmouseup = closeDragElement;
            document.onmousemove = elementDrag;
        }
        
        function elementDrag(e) {
            e = e || window.event;
            e.preventDefault();
            pos1 = pos3 - e.clientX;
            pos2 = pos4 - e.clientY;
            pos3 = e.clientX;
            pos4 = e.clientY;
            element.style.top = (element.offsetTop - pos2) + "px";
            element.style.left = (element.offsetLeft - pos1) + "px";
        }
        
        function closeDragElement() {
            document.onmouseup = null;
            document.onmousemove = null;
        }
    }

    function updateUI() {
        // Update statistics
        const profitPercent = bot.stats.startBal > 0 ? (bot.stats.profit / bot.stats.startBal * 100) : 0;
        const winRate = bot.stats.bets > 0 ? ((bot.stats.wins / bot.stats.bets) * 100) : 0;
        const ddPercent = bot.stats.startBal > 0 ? (bot.stats.maxDD / bot.stats.startBal * 100) : 0;
        const streak = bot.stats.wins > 0 && bot.stats.loss === 0 ? bot.stats.wins : 
                      bot.stats.loss > 0 && bot.stats.wins === 0 ? -bot.stats.loss : 0;
        const streakType = streak > 0 ? 'Win' : streak < 0 ? 'Lose' : 'Neutral';
        
        document.getElementById('st-p').textContent = bot.stats.profit.toFixed(8);
        document.getElementById('st-p-pct').textContent = profitPercent.toFixed(2) + '%';
        document.getElementById('st-w').textContent = bot.stats.wagered.toFixed(8);
        document.getElementById('st-w-bets').textContent = bot.stats.bets + ' bets';
        document.getElementById('st-r').textContent = `${bot.stats.wins}/${bot.stats.loss}`;
        document.getElementById('st-wr-value').textContent = winRate.toFixed(2) + '%';
        document.getElementById('st-dd').textContent = bot.stats.maxDD.toFixed(8);
        document.getElementById('st-dd-pct').textContent = ddPercent.toFixed(2) + '%';
        document.getElementById('st-bal').textContent = bot.stats.currentBal.toFixed(8);
        document.getElementById('st-streak-value').textContent = Math.abs(streak);
        document.getElementById('st-streak-type').textContent = streakType;
        
        // Update user info
        document.getElementById('user-name').textContent = bot.stakeUser;
        
        // Update mode indicator
        const colors = {
            'mines': '#f59e0b',
            'orion': '#00ccff',
            'wager': '#10b981',
            'labouchere': '#8b5cf6'
        };
        
        const modeDot = document.querySelector('.mode-dot');
        const modeText = document.getElementById('current-mode');
        const rotationStatus = document.getElementById('rotation-status');
        
        if (modeDot) modeDot.style.background = colors[bot.mode] || colors.mines;
        if (modeText) modeText.textContent = bot.mode.toUpperCase();
        
        if (rotationStatus) {
            if (bot.rotationState.comingFromMines) {
                rotationStatus.textContent = 'FROM MINES';
                rotationStatus.style.color = '#f59e0b';
            } else if (bot.rotationState.inRecovery) {
                rotationStatus.textContent = 'RECOVERY';
                rotationStatus.style.color = '#f59e0b';
            } else if (bot.isRunning) {
                rotationStatus.textContent = 'RUNNING';
                rotationStatus.style.color = '#10b981';
            } else {
                rotationStatus.textContent = 'READY';
                rotationStatus.style.color = '#10b981';
            }
        }
        
        // Update step limit
        document.getElementById('step-limit-display').textContent = bot.rotationState.stepLimit;
        
        // Update specific mode UIs
        updateMinesUI();
        updateWagerUI();
        updateLabouchereUI();
    }

    // Initialize
    createUI();
})();

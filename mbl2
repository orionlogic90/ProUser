            sendOnStart: true,
            sendOnStop: true,
            sendOnRecovery: false, // MATIKAN RECOVERY REPORTS
            sendReportInterval: 5 // minutes - HANYA PERIODIC
        }
    };

    const bot = {
        isRunning: false,

                "p-flip-side-mode": "auto"
            }
        },
        
        BALANCED: {
            name: "‚öñÔ∏è BALANCED",
            description: "Optimal risk/reward",
            settings: {
                "p-basebet": 0.00000100,
                "p-bch-min": 80.0,
                "p-bch-max": 85.0,

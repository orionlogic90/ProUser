        function updateExpirationDate() {
            const now = new Date();
            const expiration = new Date(now.getTime() + 7 * 24 * 60 * 60 * 1000);
            const options = { year: 'numeric', month: 'short', day: 'numeric' };
            
            document.getElementById("expiration-date").textContent = expiration.toLocaleDateString('en-US', options);
            document.getElementById("st-expiration").textContent = expiration.toLocaleDateString('en-US', options);
        }
        
        let isDragging = false;
        let dragOffset = { x: 0, y: 0 };
        
        document.querySelector('.header').addEventListener('mousedown', (e) => {
            if (e.target.closest('.control-btn')) return;
            isDragging = true;
            const rect = document.getElementById('orion-wrap').getBoundingClientRect();
            dragOffset.x = e.clientX - rect.left;
            dragOffset.y = e.clientY - rect.top;
            document.body.style.userSelect = 'none';
        });
        
        document.addEventListener('mousemove', (e) => {
            if (!isDragging) return;
            const wrap = document.getElementById('orion-wrap');
            wrap.style.left = (e.clientX - dragOffset.x) + 'px';
            wrap.style.top = (e.clientY - dragOffset.y) + 'px';
            wrap.style.right = 'auto';
        });
        
        document.addEventListener('mouseup', () => {
            isDragging = false;
            document.body.style.userSelect = '';
        });
        
        document.querySelector('.control-btn.minimize').addEventListener('click', () => {
            bot.minimized = !bot.minimized;
            const wrap = document.getElementById('orion-wrap');
            const content = wrap.querySelector('.content');
            
            if (bot.minimized) {
                wrap.classList.add('minimized');
                content.style.display = 'none';
                document.querySelector('.control-btn.minimize').textContent = '‚ñ°';
                document.querySelector('.control-btn.minimize').title = 'Restore';
            } else {
                wrap.classList.remove('minimized');
                content.style.display = 'block';
                document.querySelector('.control-btn.minimize').textContent = '_';
                document.querySelector('.control-btn.minimize').title = 'Minimize';
            }
        });
        
        document.querySelector('.control-btn.close').addEventListener('click', () => {
            document.getElementById('orion-wrap').remove();
        });
        
        document.querySelectorAll('.tab').forEach(tab => {
            tab.addEventListener('click', () => {
                document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
                document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
                tab.classList.add('active');
                document.getElementById(`tab-${tab.dataset.tab}`).classList.add('active');
            });
        });
        
        // Basebet mode toggle
        const basebetToggleBtns = document.querySelectorAll('.basebet-toggle-btn');
        basebetToggleBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                basebetToggleBtns.forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                
                const mode = btn.dataset.mode;
                bot.wagerStats.basebetMode = mode;
                
                const input = document.getElementById('w-basebet-input');
                if (mode === 'percentage') {
                    input.value = bot.wagerStats.basebetPercentage;
                    input.step = '0.1';
                    input.min = '0.1';
                    input.max = '10';
                    input.placeholder = 'Percentage';
                } else {
                    input.value = bot.wagerStats.basebetFixed.toFixed(8);
                    input.step = '0.00000001';
                    input.min = '0.00000001';
                    input.max = '';
                    input.placeholder = 'Fixed amount';
                }
                
                if (bot.isRunning && bot.mode === 'wager') {
                    initWagerMode();
                }
            });
        });
        
        // Basebet input handler
        document.getElementById('w-basebet-input').addEventListener('change', (e) => {
            const value = parseFloat(e.target.value) || 0;
            if (bot.wagerStats.basebetMode === 'percentage') {
                bot.wagerStats.basebetPercentage = value;
                if (value < 0.1) bot.wagerStats.basebetPercentage = 0.1;
                if (value > 10) bot.wagerStats.basebetPercentage = 10;
                e.target.value = bot.wagerStats.basebetPercentage;
            } else {
                bot.wagerStats.basebetFixed = value;
                if (value < 0.00000001) bot.wagerStats.basebetFixed = 0.00000001;
                e.target.value = bot.wagerStats.basebetFixed.toFixed(8);
            }
            
            if (bot.isRunning && bot.mode === 'wager') {
                initWagerMode();
            }
        });
        
        // Labouchere settings handlers
        document.getElementById("l-chance")?.addEventListener('change', (e) => {
            const val = parseFloat(e.target.value) || 49.5;
            bot.labouchere.chance = val;
            if (bot.isRunning && bot.mode === 'labouchere') {
                bot.currentChance = val;
            }
            document.getElementById("l-chance-value").textContent = val + "%";
        });
        
        document.getElementById("l-maxbet")?.addEventListener('change', (e) => {
            const val = parseFloat(e.target.value) || 0.01;
            bot.labouchere.maxBet = val;
            document.getElementById("l-maxbet-value").textContent = val.toFixed(8);
        });
        
        document.getElementById("l-reset-on-maxbet")?.addEventListener('change', (e) => {
            bot.labouchere.resetOnMaxBet = e.target.checked;
        });
        
        document.getElementById("l-sequence")?.addEventListener('change', (e) => {
            const seq = e.target.value || "0.001,0.002,0.003,0.004";
            if (bot.isRunning && bot.mode === 'labouchere') {
                bot.labouchere.sequence = seq.split(',').map(x => parseFloat(x.trim()) || 0.001);
                bot.labouchere.currentSequence = [...bot.labouchere.sequence];
                updateLogs(0, 0, 0, `LABOUCHERE: Sequence updated to ${seq}`, true);
                updateLabouchereUI();
            }
        });
        
        document.getElementById("l-target")?.addEventListener('change', (e) => {
            const val = parseFloat(e.target.value) || 10;
            bot.labouchere.targetProfit = val;
        });
        
        document.getElementById("mode-orion").checked = bot.enabledModes.orion;
        document.getElementById("mode-wager").checked = bot.enabledModes.wager;
        document.getElementById("mode-labouchere").checked = bot.enabledModes.labouchere;
        
        document.getElementById("mode-orion").addEventListener('change', (e) => {
            bot.enabledModes.orion = e.target.checked;
            updateLogs(0, 0, 0, `Orion ${e.target.checked ? 'ENABLED' : 'DISABLED'}`, true);
        });
        
        document.getElementById("mode-wager").addEventListener('change', (e) => {
            bot.enabledModes.wager = e.target.checked;
            updateLogs(0, 0, 0, `Wager ${e.target.checked ? 'ENABLED' : 'DISABLED'}`, true);
        });
        
        document.getElementById("mode-labouchere").addEventListener('change', (e) => {
            bot.enabledModes.labouchere = e.target.checked;
            updateLogs(0, 0, 0, `Labouchere ${e.target.checked ? 'ENABLED' : 'DISABLED'}`, true);
        });
        
        // Auto/Manual mode toggle
        const autoRadio = document.getElementById('mode-auto');
        const manualRadio = document.getElementById('mode-manual');
        const manualContainer = document.getElementById('manual-mode-container');
        
        autoRadio.addEventListener('change', (e) => {
            if (e.target.checked) {
                manualContainer.style.display = 'none';
            }
        });
        
        manualRadio.addEventListener('change', (e) => {
            if (e.target.checked) {
                manualContainer.style.display = 'block';
            }
        });
        
        // Manual rotate buttons
        document.querySelectorAll('.rotate-btn').forEach(btn => {
            btn.addEventListener('click', (e) => {
                if (!bot.isRunning) {
                    alert('Start the bot first!');
                    return;
                }
                
                const mode = e.target.dataset.mode;
                if (!bot.enabledModes[mode]) {
                    alert(`${mode.toUpperCase()} mode is disabled!`);
                    return;
                }
                
                bot.mode = mode;
                bot.rotationState.inRecovery = false;
                
                if (mode === 'orion') {
                    setNewBaseChance();
                } else if (mode === 'wager') {
                    initWagerMode();
                } else if (mode === 'labouchere') {
                    initLabouchere();
                }
                
                updateLogs(0, 0, 0, `MANUAL: Switched to ${mode.toUpperCase()} mode`, true);
                updateModeIndicator();
            });
        });
        
        document.getElementById("p-currency").onchange = (e) => { 
            bot.selectedCurrency = e.target.value; 
            document.getElementById("st-currency").textContent = e.target.value.toUpperCase();
        };
        
        document.getElementById("p-steps").addEventListener('change', (e) => {
            bot.rotationState.stepLimit = parseInt(e.target.value) || 10000;
            updateModeIndicator();
        });
        
        for (let i = 1; i <= 4; i++) {
            const input = document.getElementById(`w-xstopwin-${i}`);
            if (input) {
                input.addEventListener('change', (e) => {
                    const val = parseFloat(e.target.value) || 0;
                    bot.wagerStats.xstopwin[i-1] = val;
                    const currentEl = document.getElementById(`xstopwin-${i}-current`);
                    if (currentEl) {
                        if (i === 3) {
                            currentEl.textContent = `${val}`;
                        } else {
                            currentEl.textContent = `${val}%`;
                        }
                    }
                });
            }
        }
        
        document.getElementById("w-chance-normal")?.addEventListener('change', (e) => {
            const val = parseFloat(e.target.value) || 97;
            bot.wagerStats.chanceNormal = val;
            document.getElementById("w-chance-normal-current").textContent = `${val}%`;
        });
        
        document.getElementById("w-chance-recovery")?.addEventListener('change', (e) => {
            const val = parseFloat(e.target.value) || 25;
            bot.wagerStats.chanceRecovery = val;
            document.getElementById("w-chance-recovery-current").textContent = `${val}%`;
        });
        
        document.getElementById("w-chance-max")?.addEventListener('change', (e) => {
            const val = parseFloat(e.target.value) || 99;
            bot.wagerStats.chanceMax = val;
            document.getElementById("w-chance-max-current").textContent = `${val}%`;
        });
        
        document.getElementById("test-telegram").onclick = async () => {
            const testBtn = document.getElementById("test-telegram");
            const statusEl = document.getElementById("telegram-status");
            testBtn.innerHTML = 'Testing...';
            testBtn.disabled = true;
            statusEl.textContent = "Testing";
            statusEl.style.color = "#f59e0b";
            
            try {
                const testMessage = `üß™ ORION v8.0 Test\nTime: ${new Date().toLocaleString()}\nUser: ${bot.stakeUser}\nStatus: OK`;
                const result = await API.sendTelegramReport(testMessage);
                
                if (result?.ok) {
                    updateLogs(0, 0, 0, '‚úÖ Telegram: Connected', true);
                    statusEl.textContent = "Connected";
                    statusEl.style.color = "#10b981";
                } else {
                    updateLogs(0, 0, 0, '‚ùå Telegram: Failed', true);
                    statusEl.textContent = "Failed";
                    statusEl.style.color = "#ef4444";
                }
            } catch (error) {
                statusEl.textContent = "Error";
                statusEl.style.color = "#ef4444";
            } finally {
                testBtn.innerHTML = 'Test';
                testBtn.disabled = false;
            }
        };
        
        document.getElementById("send-now-telegram").onclick = async () => {
            const sendBtn = document.getElementById("send-now-telegram");
            sendBtn.innerHTML = 'Sending...';
            sendBtn.disabled = true;
            
            try {
                const report = generateTelegramReport();
                const result = await API.sendTelegramReport(report);
                
                if (result?.ok) {
                    updateLogs(0, 0, 0, 'üìä Report sent', true);
                    bot.telegramReport.lastReportTime = Date.now();
                }
            } catch (error) {
                updateLogs(0, 0, 0, '‚ö†Ô∏è Report failed', true);
            } finally {
                sendBtn.innerHTML = 'Report';
                sendBtn.disabled = false;
            }
        };
        
        document.getElementById("telegram-report-btn").onclick = async () => {
            const reportBtn = document.getElementById("telegram-report-btn");
            reportBtn.innerHTML = '‚è≥';
            reportBtn.disabled = true;
            
            try {
                const report = generateTelegramReport();
                const result = await API.sendTelegramReport(report);
                
                if (result?.ok) {
                    updateLogs(0, 0, 0, 'üìä Report sent', true);
                } else {
                    updateLogs(0, 0, 0, '‚ö†Ô∏è Report failed', true);
                }
            } catch (error) {
                console.error('Report error:', error);
            } finally {
                reportBtn.innerHTML = 'üìä TG REPORT';
                reportBtn.disabled = false;
            }
        };
        
        document.getElementById("p-demo-toggle").onchange = (e) => {
            bot.isDemo = e.target.checked;
            updateLogs(0, 0, 0, `Demo ${bot.isDemo ? 'ON' : 'OFF'}`, true);
        };
        
        document.getElementById("p-start").onclick = async () => {
            bot.selectedCurrency = document.getElementById("p-currency").value;
            
            if (!bot.isDemo) await API.syncOnce();
            bot.isRunning = true;
            
            const startBtn = document.getElementById("p-start");
            startBtn.innerHTML = '‚ö° RUNNING';
            startBtn.classList.remove('btn-primary');
            startBtn.classList.add('btn-success');
            
            bot.stats = { 
                profit: 0, wagered: 0, startBal: 0, currentBal: 0, 
                bets: 0, wins: 0, loss: 0, startTime: Date.now(), 
                maxDD: 0, maxDDPerc: 0 
            };
            
            if (!bot.isDemo) {
                bot.stats.startBal = await API.getBalance(bot.selectedCurrency);
            } else {
                bot.stats.startBal = 100.0;
            }
            
            bot.stats.currentBal = bot.stats.startBal;
            bot.rotationState.initialBalance = bot.stats.startBal;
            bot.rotationState.inRecovery = false;
            
            bot.rotationState.stepLimit = parseInt(document.getElementById("p-steps").value) || 10000;
            
            bot.targetAbs = bot.stats.startBal * (parseFloat(document.getElementById("p-target-pct").value) / 100);
            bot.stopLossAbs = bot.stats.startBal * (parseFloat(document.getElementById("p-stop-pct").value) / 100);
            bot.perStep = bot.targetAbs / bot.rotationState.stepLimit;
            
            bot.rotationState.wagerLossThreshold = parseFloat(document.getElementById("s-wager-threshold").value) / 100 || 0.001;
            bot.rotationState.severeLossThreshold = parseFloat(document.getElementById("s-severe-threshold").value) / 100 || 0.01;
            
            const modeSelect = document.querySelector('input[name="mode"]:checked');
            if (modeSelect && modeSelect.value === 'auto') {
                const enabledMode = Object.keys(bot.enabledModes).find(mode => bot.enabledModes[mode]);
                if (enabledMode) {
                    bot.mode = enabledMode;
                    if (bot.mode === 'wager') initWagerMode();
                    if (bot.mode === 'labouchere') initLabouchere();
                    if (bot.mode === 'orion') setNewBaseChance();
                } else {
                    alert('Enable at least one mode!');
                    bot.isRunning = false;
                    startBtn.innerHTML = '‚ñ∂ START';
                    startBtn.classList.remove('btn-success');
                    startBtn.classList.add('btn-primary');
                    return;
                }
            } else {
                // In manual mode, use the current mode
                if (!bot.enabledModes[bot.mode]) {
                    const firstEnabled = Object.keys(bot.enabledModes).find(mode => bot.enabledModes[mode]);
                    if (firstEnabled) {
                        bot.mode = firstEnabled;
                    } else {
                        alert('Enable at least one mode!');
                        bot.isRunning = false;
                        startBtn.innerHTML = '‚ñ∂ START';
                        startBtn.classList.remove('btn-success');
                        startBtn.classList.add('btn-primary');
                        return;
                    }
                }
                
                if (bot.mode === 'wager') initWagerMode();
                if (bot.mode === 'labouchere') initLabouchere();
                if (bot.mode === 'orion') setNewBaseChance();
            }
            
            bot.telegramReport.lastReportTime = Date.now();
            
            updateModeIndicator();
            updateLogs(0, 0, 0, `Started: ${bot.mode.toUpperCase()}`, true);
            
            runLoop();
        };
        
        document.getElementById("p-stop").onclick = () => { 
            bot.isRunning = false; 
            const startBtn = document.getElementById("p-start");
            startBtn.innerHTML = '‚ñ∂ START';
            startBtn.classList.remove('btn-success');
            startBtn.classList.add('btn-primary');
            updateLogs(0, 0, 0, "Stopped", true);
        };
        
        const updateUserDisplay = () => {
            document.getElementById("user-name").textContent = bot.stakeUser;
            document.getElementById("st-user-name").textContent = bot.stakeUser;
        };
        
        updateExpirationDate();
        updateUserDisplay();
        
        setInterval(checkAndSendReport, 30000);
    }

    function updateModeIndicator() {
        const indicator = document.getElementById("mode-indicator");
        const modeText = document.getElementById("current-mode");
        const rotationStatus = document.getElementById("rotation-status");
        const stepLimitDisplay = document.getElementById("step-limit-display");
        const currentStepLimit = document.getElementById("current-step-limit");
        
        const colors = {
            orion: '#00ccff',
            wager: '#10b981', 
            labouchere: '#8b5cf6'
        };
        
        if (modeText) modeText.textContent = bot.mode.toUpperCase();
        if (indicator && indicator.querySelector('.mode-dot')) {
            indicator.querySelector('.mode-dot').style.background = colors[bot.mode] || colors.orion;
        }
        if (rotationStatus) {
            rotationStatus.textContent = bot.isRunning ? (bot.rotationState.inRecovery ? 'RECOVERY' : 'RUNNING') : 'READY';
            rotationStatus.style.color = bot.isRunning ? (bot.rotationState.inRecovery ? '#f59e0b' : '#10b981') : '#64748b';
        }
        
        if (stepLimitDisplay) {
            stepLimitDisplay.textContent = bot.rotationState.stepLimit;
        }
        if (currentStepLimit) {
            currentStepLimit.textContent = bot.rotationState.stepLimit;
        }
    }

    setInterval(() => {
        if (document.getElementById("st-p")) {
            const profitPercent = bot.stats.startBal > 0 ? (bot.stats.profit / bot.stats.startBal * 100) : 0;
            const winRate = bot.stats.bets > 0 ? ((bot.stats.wins / bot.stats.bets) * 100) : 0;
            const ddPercent = bot.stats.startBal > 0 ? (bot.stats.maxDD / bot.stats.startBal * 100) : 0;
            const streak = bot.stats.wins > 0 && bot.stats.loss === 0 ? bot.stats.wins : 
                          bot.stats.loss > 0 && bot.stats.wins === 0 ? -bot.stats.loss : 0;
            const streakType = streak > 0 ? 'Win' : streak < 0 ? 'Lose' : 'Neutral';
            
            document.getElementById("st-p").innerText = bot.stats.profit.toFixed(8);
            document.getElementById("st-p-pct").innerText = profitPercent.toFixed(2) + '%';
            document.getElementById("st-w").innerText = bot.stats.wagered.toFixed(8);
            document.getElementById("st-w-bets").innerText = `${bot.stats.bets} bets`;
            document.getElementById("st-r").innerText = `${bot.stats.wins}/${bot.stats.loss}`;
            document.getElementById("st-wr-value").innerText = winRate.toFixed(2) + '%';
            document.getElementById("st-dd").innerText = bot.stats.maxDD.toFixed(8);
            document.getElementById("st-dd-pct").innerText = ddPercent.toFixed(2) + '%';
            document.getElementById("st-bal").innerText = bot.stats.currentBal.toFixed(8);
            document.getElementById("st-streak-value").innerText = Math.abs(streak);
            document.getElementById("st-streak-type").innerText = streakType;
            if (document.getElementById("st-streak-value")) {
                document.getElementById("st-streak-value").style.color = streak > 0 ? '#10b981' : streak < 0 ? '#ef4444' : '#64748b';
            }
            
            const userNameEl = document.getElementById("st-user-name");
            if (userNameEl && bot.stakeUser !== "Loading...") {
                userNameEl.textContent = bot.stakeUser;
                document.getElementById("user-name").textContent = bot.stakeUser;
            }
        }
        
        updateModeIndicator();
        updateWagerUI();
        updateLabouchereUI();
        
        // Update current base bet display
        if (document.getElementById("w-current-basebet")) {
            document.getElementById("w-current-basebet").innerText = bot.wagerStats.basebet.toFixed(8);
        }
    }, 1000);

    createUI(); 
    setTimeout(() => {
        API.syncOnce();
    }, 500);
})();

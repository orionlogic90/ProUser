        document.head.appendChild(s);
        
        const d = document.createElement("div");
        d.className = "access-denied";
        d.innerHTML = `
            <div class="access-card">
                <div class="access-title">‚ö†Ô∏è ACCESS DENIED</div>
                <div class="access-subtitle">
                    Your username is not whitelisted for ORION v8.0 PRO
                </div>
                
                <div class="user-info">
                    Detected Username: <span>${bot.stakeUser}</span><br>
                    Status: <span style="color: #ef4444;">NOT WHITELISTED</span>
                </div>
                
